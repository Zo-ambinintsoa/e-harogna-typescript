<%- include('../layouts/header') -%>
<style>
    .app-login .auth-background-holder{background:url("/assets/images/login_bg.png") no-repeat center center;background-size:cover;height:100vh;min-height:100%}
</style>
<div class="app-login">


<div class="row g-0 app-auth-wrapper">
    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
        <div class="d-flex flex-column align-content-end">
            <%- include('../layouts/alert') -%>
            <div class="app-auth-body mx-auto">	
                <div class="app-auth-branding mb-4">
                    <a class="app-logo" href="/"><img class="logo-icon me-2" src="/assets/images/logo.png" alt="logo"><span class="logo-text">E-Harogna</span></a>
                </div>
                <h2 class="auth-heading text-center mb-5">Connecter vour pour acceder a l'application</h2>
                <div class="auth-form-container text-start">
                    <form class="auth-form login-form" method="post"
                     action="/api/register"
                     enctype="application/json">         
                        <div class="email mb-3">
                            <label class="sr-only" for="signin-email">Email</label>
                            <input id="signin-email" name="email" type="email" class="form-control signin-email" placeholder="Email address" required="required">
                        </div><!--//form-group-->
                        <div class="password mb-3">
                            <label class="sr-only" for="signin-password">Mot de passe</label>
                            <input id="signin-password" name="password" type="password" class="form-control signin-password" placeholder="Mot de passe" required="required">
                        </div><!--//form-group-->
                        <div class="password mb-3">
                            <label class="sr-only" for="signin-password">confirmer Mot de passe</label>
                            <input id="signin-password" name="confirmPassword" type="password" class="form-control signin-password" placeholder="Confirmation du mot de passe" required="required">
                        </div><!--//form-group-->
                        <div class="extra mb-3 mt-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="RememberPassword">
                                <label class="form-check-label" for="RememberPassword">
                                I agree to Portal's <a href="#" class="app-link">Terms of Service</a> and <a href="#" class="app-link">Privacy Policy</a>.
                                </label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Log In</button>
                        </div>
                    </form>
                    
                    <div class="auth-option text-center pt-5">vous avez deja un compte? Connecter-vous <a class="text-link" href="/login" >ici</a>.</div>
                </div><!--//auth-form-container-->	

            </div><!--//auth-body-->
        
        <!--//container-->
        <footer class="app-footer">
            <div class="container text-center py-3">
                <small class="copyright">Designed by <a class="app-link" href="http://linkedin.com/in/zo-ambinintsoa" target="_blank">Zo</a> for E-Harogna</small>
            </div>
        </footer>
        </div><!--//flex-column-->   
    </div><!--//auth-main-col-->
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
        <div class="auth-background-holder">
        </div>
        <div class="auth-background-mask"></div>
        <div class="auth-background-overlay p-3 p-lg-5">

        </div><!--//auth-background-overlay-->
    </div><!--//auth-background-col-->

</div><!--//row-->
</div>
<%- include('../layouts/footer') -%>